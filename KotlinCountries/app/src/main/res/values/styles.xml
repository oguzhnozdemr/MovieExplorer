<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Rounded Image Style -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <!-- Chip Style -->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">12sp</item>
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextHeading">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>
    
    <style name="TextSubheading">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    
    <style name="TextBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
</resources> 